<Window x:Class="FitTrack.AddWorkoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitTrack"
        mc:Ignorable="d"
        Title="AddWorkoutWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Add New Workout" FontSize="20" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top"/>
        
        <ComboBox x:Name="WorkoutTypeComboBox" HorizontalAlignment="Left" Margin="50,50,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Cardio"/>
            <ComboBoxItem Content="Strength"/>
        </ComboBox>
       
        <TextBox x:Name="WorkoutDetailsInput"  HorizontalAlignment="Left" Margin="50,100,0,0" TextWrapping="Wrap" Text="Enter details" VerticalAlignment="Top" Width="120"/>
        
        
        <Button x:Name="SaveBtn" Content="Save Workout" HorizontalAlignment="Left" Margin="50,150,0,0" VerticalAlignment="Top" Width="100" Click="SaveBtn_Click"/>
        
        <Button x:Name="CancelBtn" Content="Cancel" HorizontalAlignment="Right" Margin="0,150,50,0" VerticalAlignment="Top" Width="100" Click="CancelBtn_Click"/>








    </Grid>
</Window>
