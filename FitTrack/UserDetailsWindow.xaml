<Window x:Class="FitTrack.UserDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitTrack"
        mc:Ignorable="d"
        Title="UserDetailsWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Edit User Details" FontSize="20" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top"/>
        
        <Label Content="Current Username" HorizontalAlignment="Left" Margin="20,70,20,0" VerticalAlignment="Top" Width="150"/>
        <TextBox x:Name="NewUsernameInput" HorizontalAlignment="Right" Margin="0,110,20,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        
        <Label Content="New Username:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,110,0,0"/>
        <TextBox HorizontalAlignment="Left" Margin="64,168,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>







    </Grid>
</Window>
